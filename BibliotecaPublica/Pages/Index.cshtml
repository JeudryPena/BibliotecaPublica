@page
@model BibliotecaPublica.Pages.Admin.Libros.IndexModel


@{
    ViewData["Title"] = "Pagina inicial";
}

<style type="text/css">
    a {
        background-color: #f6897a;
        color: #000000;
        font-family: Verdana;
        padding: 2px;
        font-weight: bold;
    }

    h1 {
        color: #fff;
    }

    h4 {
        color: #8ba6fe;
    }

    th {
        color: #283cd4;
        font-weight: bolder;
        font-size: 25px;
    }

    td {
        color: #000000;
        font-size: 18px;
    }

    .row {
        color: #fff;
        font-size: 20px;
    }

    li {
        color: #fff;
        font-size: 20px;
    }

    .text-center {
        color: #fff;
    }

    .usreg {
        color: #fff;
        font-size: 20px;
        font-weight: bold;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Bienvenidos</h1>
    <p>Grupo #1</p>
</div>

// Juntando lo de jeudri y lo mio

<ul>
    <li>
        <a asp-page="admin/autores/index">Autores</a>
    </li>
    <li>
        <a asp-page="admin/categorias/index">Categorias</a>
    </li>
    <li>
        <a asp-page="admin/libros/index">Libros</a> | <a asp-page="admin/libros/busqueda">Busqueda</a> <span>|</span> <a asp-page="admin/libros/Create" class="btn btn-sm btn-success">Nuevo</a>
    </li>
    <li>
        <a asp-page="admin/almacen/inventario/index">Inventarios</a>
    </li>
</ul>


<div class="container">
    <div class="row">

        @foreach(var item in Model.LibroModel) { 

        <div class="col-lg-4">

            <div class="card">
                <img class="card-img-top" src="~/img/immm.svg" alt="card image">
                <div class="card-header">
                    <p>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </p>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <p>
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </p>
                    </h5>
                    <p class="card-text">
                        @Html.DisplayFor(modelItem => item.Autor.Nombre)
                    </p>
                </div>
            </div>


        </div>}
    </div>
</div>
