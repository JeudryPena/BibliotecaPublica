@page
@model IndexModel

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Pagina inicial";
}

<style type="text/css">
    a {
        background-color: #f6897a;
        color: #000000;
        font-family: Verdana;
        padding: 2px;
        font-weight: bold;
    }

    h1 {
        color: #fff;
    }

    h4 {
        color: #8ba6fe;
    }

    th {
        color: #283cd4;
        font-weight: bolder;
        font-size: 25px;
    }

    td {
        color: #000000;
        font-size: 18px;
    }

    .row {
        color: #fff;
        font-size: 20px;
    }

    li {
        color: #fff;
        font-size: 20px;
    }

    .text-center {
        color: #fff;
    }

    .usreg {
        color: #fff;
        font-size: 20px;
        font-weight: bold;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Bienvenidos</h1>
    <p>Grupo #1</p>
</div>

<div class="usreg">
    <p>Usuarios Registrados: </p>
</div>

<ol>
    @foreach (var item in UserManager.Users)
    {
        <li>@item.UserName</li>
    }
</ol>

<ul>
    <li>
        <a asp-page="admin/autores/index">Autores</a>
    </li>
    <li>
        <a asp-page="admin/categorias/index">Categorias</a>
    </li>
    <li>
        <a asp-page="admin/libros/index">Libros</a> | <a asp-page="admin/libros/busqueda">Busqueda</a> @if (SignInManager.IsSignedIn(User))
        {<span>|</span> <a asp-page="admin/libros/Create" class="btn btn-sm btn-success">Nuevo</a>}
    </li>
    <li>
        <a asp-page="admin/almacen/inventario/index">Inventarios</a>
    </li>
</ul>