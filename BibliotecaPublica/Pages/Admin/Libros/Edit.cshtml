@page
@model BibliotecaPublica.Pages.Admin.Libros.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<style type="text/css">
    a {
        background-color: #f6897a;
        color: #000000;
        font-family: Verdana;
        padding: 10px;
        font-weight: bold;
    }

    h1 {
        color: #fff;
    }

    h4 {
        color: #8ba6fe;
    }

    th {
        color: #283cd4;
        font-weight: bolder;
        font-size: 25px;
    }

    td {
        color: #000000;
        font-size: 18px;
    }

    .table {
        background-color: #f2f2f2;
    }

    .row {
        color: #fff;
        font-size: 20px;
    }
</style>

<h4>LibroModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LibroModel.Id" />
            <input type="hidden" asp-for="LibroModel.Codigo" />

            <div class="form-group">
                <label asp-for="LibroModel.Titulo" class="control-label"></label>
                <input asp-for="LibroModel.Titulo" class="form-control" />
                <span asp-validation-for="LibroModel.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroModel.Descripcion" class="control-label"></label>
                <input asp-for="LibroModel.Descripcion" class="form-control" />
                <span asp-validation-for="LibroModel.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroModel.Publicacion" class="control-label"></label>
                <input asp-for="LibroModel.Publicacion" class="form-control" />
                <span asp-validation-for="LibroModel.Publicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroModel.CategoriaId" class="control-label"></label>
                <select asp-for="LibroModel.CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="LibroModel.CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroModel.AutorId" class="control-label"></label>
                <select asp-for="LibroModel.AutorId" class="form-control" asp-items="ViewBag.AutorId"></select>
                <span asp-validation-for="LibroModel.AutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
